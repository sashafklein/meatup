<h1>Package List</h1>

<table class="table">
  <tr>
    <th>Cut</th>
    <th>Estimated Packages</th>
    <th>Packages Remaining</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <% @c = Cut.find(package.cut_id) %>
    <td><%= @c.name %></td>
    <td><%= package.original %></td>
    <td><%= package.left %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

