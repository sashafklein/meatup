<% provide(:title, 'Hosts') %>

<h1>Host List</h1>
<p style="text-align:center">(<%= link_to 'Add New', new_host_path %>)</p><br>

<h2> Host Info </h2>
<table class="table"> 
  <tr>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Phone</th>
    <th></th>
    <% if current_user.admin? %>  
      <th></th>
      <th></th>
    <% end %>
  </tr>
  <% if @hosts %>
    <% @hosts.each do |b| %>
    	<tr>
  		<td><%= b.address %></td>
  	    <td><%= b.phone %></td>
  	    <td><%= b.final_price %></td>
  	    <td><%= b.wrap_price %></td>
  	    <td><%= b.vacuum_price %></td>
  	    <td><%= nice_bool(b.ground) %></td>
  	    <td><%= nice_bool(b.stew) %></td>
  	    <td><%= nice_bool(b.boneless) %></td>
        <td><%= link_to 'Show', b %></td>
        <% if current_user.admin? %>  
          <td><%= link_to 'Edit', edit_host_path(b) %></td>
          <td><%= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
    <% end %>
  	</tr>
  <% end %>
 </table>


