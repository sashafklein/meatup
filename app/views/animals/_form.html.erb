<%= form_for(@animal) do |f| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <%= f.label "Type of Animal" %><br />
    <%= f.select :animal_type, [["Cow", "Cow"],["Pig","Pig"],["Lamb","Lamb"],["Goat","Goat"]] %>
  </div>
  <div class="field">
    <%= f.label "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Breed" %><br />
    <%= f.text_field :breed %>
  </div>
  <div class="field">
    <%= f.label "Live Weight" %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label "Ranch" %><br />
    <%= f.collection_select(:ranch_id, Ranch.all, :id, :name) %>
  </div>
    <div class="field">
    <%= f.label "Butcher" %><br />
    <%= f.collection_select(:butcher_id, Butcher.all, :id, :name) %>
  </div>
  <% if current_user %>
    <% unless @animal.user_id %>
      <%= f.hidden_field  :host_id, value: current_user.id %>
    <% end %>
  <% end %>
  
  <div class="field">
    <%= f.label "Photo" %><br />
    <%= f.text_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>		