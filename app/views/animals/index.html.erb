<h1>Animal List</h1>

<table>
  <tr>
    <th>Type of Animal</th>
    <th>Name</th>
    <th>Breed</th>
    <th>Live Weight</th>
    <th>Farm</th>
    <th>Host</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.animal_type %></td>
    <td><%= animal.name %></td>
    <td><%= animal.breed %></td>
    <td><%= animal.weight %></td>
    <td><%= animal.farm %></td>
    <td><%= animal.host %></td>
    <td><%= animal.photo %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

