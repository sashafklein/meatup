.row{:style => "text-align:center"}
  .collapse-group
    %h4.normal_links
      %a.bundle{:href => "#"} (Downpaid)
    %br/
    .collapse.normal_links
      %table.table
        %tr
          %th User
          %th Date
          %th Line Item
          %th # Packages
          %th Cut Notes
          %th Package Weight
          %th Price
          %th Line Total
        %tr
          - @animal.downpaid_orders.each do |o|
            %tr.info
              %td= link_to o.user.name, user_path(o.user.id)
              %td= link_to localize(o.created_at, :format => ("%d, %B, %Y")), o
              %td
              %td
              %td
              %td
              %td
              %td
            - o.lines.each do |l|
              - if l.units != 0
                %tr
                  %td
                  %td
                  %td= l.cut.name
                  %td= l.units
                  %td= l.notes
                  %td
                    = l.expected_weight
                    lb
                  %td= number_to_currency(l.price)
                  %td= number_to_currency(l.total)
            %tr
              %td
              %td
              %td
              %td
              %th Order Total:
              %th= "#{o.poundage.round(2)}lbs"
              %th
              %th= number_to_currency(o.total)
        %tr
          %td
          %td
          %td
          %td
          %td
          %td{:style => "font-size:130%; font-weight:bold"} Total Deposited:
          %td{:style => "font-size:130%; font-weight:bold"}= "#{@animal.downpaid_pounds.round(2)}lbs"
          %td{:style => "font-size:130%; font-weight:bold"}
            = number_to_currency(@animal.downpaid_total)
