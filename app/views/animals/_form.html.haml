= form_for(@animal) do |f|
  - if @animal.errors.any?
    #error_explanation
      %h2
        = pluralize(@animal.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @animal.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Type of Animal"
    %br/
    = f.select :animal_type, [["Cow", "Cow"],["Pig","Pig"],["Lamb","Lamb"],["Goat","Goat"]]
  .field
    = f.label "Name"
    %br/
    = f.text_field :name
  .field
    = f.label "Breed"
    %br/
    = f.text_field :breed
  .field
    = f.label "Live Weight"
    %br/
    = f.text_field :weight
  .field
    = f.label "Ranch"
    %br/
    = f.collection_select(:ranch_id, Ranch.all, :id, :name)
  .field
    = f.label "Butcher"
    %br/
    = f.collection_select(:butcher_id, Butcher.all, :id, :name)
  - if current_user
    - unless @animal.host_id
      = f.hidden_field  :host_id, value: current_user.id
  .field
    = f.label "Photo"
    %br/
    = f.text_field :photo
  .actions
    = f.submit
