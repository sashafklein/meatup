<% @given_type = Animal.where(:animal_type => @type) %>
<tr class="animal_table_header2">
  <th class="animal_table_header2">
    <%= @type %>
  </th>
  <th colspan=9 class="animal_table_header2">
  </th>
</tr>
<% @given_type.each do |animal| %>
  <tr>
    <td style="color:#ddd;"><%= animal.animal_type %></td>
    <td><%= animal.id %></td>
    <td><%= animal.name %></td>
    <td><%= animal.breed %></td>
    <td><%= animal.weight %></td>
    <td><%= animal.ranch.name %></td>
    <td><%= animal.host %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
