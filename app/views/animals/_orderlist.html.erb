<% @animal.orders.each do |o| %>
	<tr class="info">
		<td><%= link_to o.user.name, user_path(o.user.id) %></td>
			<% status_array = ["Incomplete", "Deposited", "Finalized", "Other"] %>
		<td><%= status_array[o.status] %></td>
		<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
	</tr>
	<% o.lines.each do |l| %>
		<% if l.units != 0 %>
			<tr>
				<td></td>
				<td></td>
			    	<td><%= l.cut.name %></td>
			    	<td><%= l.units %></td>
			    	<td><%= l.notes %></td>
			    	<td><%= l.expected_weight %> lb</td>
			    	<td><%= number_to_currency(l.price) %></td>
			    	<td><%= number_to_currency(l.total) %></td>
		    </tr>
		<% end %>
	<% end %>

	<tr>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<th>Order Total:</th>
    	<th><%= "#{o.poundage.round(2)}lbs" %></th>
    	<th></th>
    	<th><%= number_to_currency(o.total) %></th>
    </tr>

<% end %>
<tr>
	<td></td>
	<td></td>
	<td></td>
	<td></td>
	<td></td>
	<td style="font-size:130%; font-weight:bold">Total Sales:</td>
	<td style="font-size:130%; font-weight:bold"><%="#{@animal.pounds_sold.round(2)}lbs"%></td>
	<td style="font-size:130%; font-weight:bold"><%= number_to_currency(@animal.revenue_made) %></th>
</tr>
