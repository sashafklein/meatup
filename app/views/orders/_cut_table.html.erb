<br>
<h2>Your Order</h2>
<table class="table">
  
  <tr>
    <th>Cut</th>
    <th>Package Weight</th>
    <th>Price/lb</th>
    <th>Packages</th>
    <% @b = @order_animal.butcher %>
    <% if @b.ground %>
      <th>Grind it?</th>
    <% end %>
    <% if @b.stew %>
      <th>Turn to stew?</th>
    <% end %>
    <% if @b.boneless %>
      <th>Boneless?</th>
    <% end %>
  </tr>

  <% @cutlist = Cut.where(:animal_type => @meat) %>


  <% @cutlist.each do |c| %>

    <%= @f.fields_for :lines do |l| %>
      <tr>
        <%= l.hidden_field :cut_id, value: c.id %>
        <td><%= c.name %></td>
        <td><%= c.package_weight %> lb</td>
        <td>$<%= c.price %></td>
          <% @p = Package.find_by_cut_id_and_animal_id(c.id, @order_animal.id) %>
          <% if @p %>
            <% @p_left = (0..@p.left).to_a %>
            <% if @p.left == 0 %>
              <td class="red">SOLD OUT</td>
              <%= l.hidden_field :units, value: 0 %>
            <% else %>
              <td><%= l.select :units, @p_left %></td>
            <% end %>
          <% else %>
            <td>No Animal, No Packages</td>
          <% end %>

          <% if @b.ground && c.name != "Ground Beef" %>
            <td><%= l.check_box :ground %></td>
          <% elsif @b.ground %>
            <td></td>
          <% end %>
          <% if @b.stew && c.name != "Beef Stew" %>
            <td><%= l.check_box :stew %></td>
          <% elsif @b.stew %>
            <td></td>
          <% end %>
          <% if @b.boneless %>
            <td><%= l.check_box :boneless %></td>
          <% end %>
      </tr>
    <% end %>

  <%end%>
</table>